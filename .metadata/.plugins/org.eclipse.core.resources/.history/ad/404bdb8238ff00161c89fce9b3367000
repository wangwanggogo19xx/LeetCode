    	return addSingleString(a, b, false);
    }
    public String addSingleString(String a,String b,boolean isCarry){
//    	String result="";
    	if(a.length() == 0 && b.length() == 0) return "";
    	else if(b.length() == 0){
    		if(a.charAt(a.length()-1) == '1'){
    			if(isCarry){
    				return addSingleString(a.substring(0,a.length()-1), b, true)+"0";
    			}else{
    				return addSingleString(a.substring(0,a.length()-1), b, false)+"1";
    			}
    		}else{
    			if(isCarry){
    				return addSingleString(a.substring(0,a.length()-1), b, false)+"1";
    			}else{
    				return addSingleString(a.substring(0,a.length()-1), b, false)+"0";
    			}
    		}
    	}else if(a.length() == 0){
    		return addSingleString(b, a, false);
    	}else{
    		if(a.charAt(a.length()-1) == b.charAt(b.length()-1)){
    			if(a.charAt(a.length()-1) == '1'){
    				return isCarry? addSingleString(a.substring(0,a.length()-1), b.substring(0,a.length()-1), true)+"1":
    					addSingleString(a.substring(0,a.length()-1), b.substring(0,a.length()-1), true)+"0";
    			}else{
    				return isCarry? addSingleString(a.substring(0,a.length()-1), b.substring(0,a.length()-1), false)+"1":
    					addSingleString(a.substring(0,a.length()-1), b.substring(0,a.length()-1), false)+"0";
    			}
    		}else{
    			return isCarry? addSingleString(a.substring(0,a.length()-1), b.substring(0,a.length()-1), true)+"0":
					addSingleString(a.substring(0,a.length()-1), b.substring(0,a.length()-1), false)+"1";
    		}
    	
    	}
    	
    }
}