package com.zw.leetCode_67;

public class Solution {
    public String addBinary(String a, String b) {
        int n = Integer.max(a.length(), b.length());
        boolean isCarry = false;
        String result="";
        for(int i=n-1;i>=0;i--){
        	if(a.charAt(i) == b.charAt(i)){
        		if(a.charAt(i) == '0'){
        			if(!isCarry){
        				result = "0"+result;
        			}else{
        				result = "1" +result;
        				isCarry = true;
        			}
        		}
        		else{
        			if (isCarry) {
						result = "1"+result;
					}else{
						result = "0" +result;
					}
        			isCarry = true;
        		}
        	}else {
				if(isCarry){
					result = "0" + result;
					isCarry = false;
				}else {
					result = "1" +result;
				}
			}
        }
    }
}