package com.zw.leetCode_67;

public class Solution {
    public String addBinary(String a, String b) {
        int n = Integer.min(a.length(), b.length());
        boolean isCarry = false;
        String result="";
        for(int i=n-1;i>=0;i--){
        	if(a.charAt(i) == b.charAt(i)){
        		if(a.charAt(i) == '0'){
        			if(!isCarry){
        				result = "0"+result;
        			}else{
        				result = "1" +result;
        				isCarry = true;
        			}
        		}
        		else{
        			if (isCarry) {
						result = "1"+result;
					}else{
						result = "0" +result;
					}
        			isCarry = true;
        		}
        	}else {
				if(isCarry){
					result = "0" + result;
					isCarry = false;
				}else {
					result = "1" +result;
				}
			}
        }
        
        return result;
    }
    public String addSingleString(String a,String b,boolean isCarry){
    	String result="";
    	if(a.length() == 0 && b.length() == 0) return "";
    	else if(b.length() == 0){
    		if(a.charAt(a.length()-1) == '1'){
    			if(isCarry){
    				return addSingleString(a.substring(0,a.length()-2), b, true)+"0";
    			}else{
    				return addSingleString(a.substring(0,a.length()-2), b, false)+"1";
    			}
    		}else{
    			if(isCarry){
    				return addSingleString(a.substring(0,a.length()-2), b, false)+"1";
    			}else{
    				return addSingleString(a.substring(0,a.length()-2), b, false)+"0";
    		}
    	}else if(a.length() == 0){
    		return addSingleString(b, a.substring(0,a.length()-2), false)+"0";
    	}
    	}
    	
    }
}